{
  "compilerOptions": {
    "target": "ES2020", 
    "lib": ["es2020", "dom"],
    "module": "ESNext", 
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "src",
    "strict": true,
    "removeComments": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["chrome"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
